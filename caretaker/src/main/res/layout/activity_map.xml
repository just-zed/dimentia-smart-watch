<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapActivity">

    <Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/cancel_button"
                style="@android:style/Widget.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/cancel"
                android:src="@drawable/ic_clear_black_24dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/fence_mode_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="20sp"
                tools:text="Edit" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/add_button"
                style="@android:style/Widget.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add"
                android:src="@drawable/ic_add_black_24dp" />

            <ImageButton
                android:id="@+id/add_advance_button"
                style="@android:style/Widget.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/add_advance"
                android:src="@drawable/ic_add_circle_outline_black_24dp" />


            <ImageButton
                android:id="@+id/delete_button"
                style="@android:style/Widget.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete_black_24dp"
                android:text="@string/delete"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageButton
                android:id="@+id/save_button"
                style="@android:style/Widget.ActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_done_black_24dp"
                android:text="@string/save"
                android:visibility="gone"
                tools:visibility="visible" />


        </LinearLayout>
    </Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.justzed.caretaker.MapActivity" />

        <ImageButton
            android:id="@+id/mapCenterButton"
            style="@android:style/Widget.ActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:contentDescription="@string/center_map_description"
            android:onClick="centerPatientMarker"
            android:src="@drawable/map_center" />

        <LinearLayout
            android:id="@+id/fence_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:background="#f0ffffff"
            android:baselineAligned="false"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">


                <EditText
                    android:id="@+id/fence_title_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_description"
                    android:text=""
                    android:textAlignment="center" />


                <TextView
                    android:id="@+id/fence_radius_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/radius_of_geofence" />

                <SeekBar
                    android:id="@+id/fence_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:splitTrack="false" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="205dp"
                    android:layout_gravity="center"
                    android:background="#f0ffffff">

                    <ToggleButton
                        android:id="@+id/toggleButton"
                        android:layout_width="88dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:onClick="changeStates"
                        android:text="New ToggleButton"
                        android:textOff="set time off"
                        android:textOn="set time on"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:text="Hours :"
                        android:visibility="invisible" />

                    <NumberPicker
                        android:id="@+id/numberPicker"
                        android:layout_width="wrap_content"
                        android:layout_height="129dp"
                        android:layout_gravity="left|center_vertical"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:text="Min :"
                        android:visibility="invisible" />

                    <NumberPicker
                        android:id="@+id/numberPicker2"
                        android:layout_width="wrap_content"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:visibility="invisible" />


                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:text="New Text"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>

</LinearLayout>
